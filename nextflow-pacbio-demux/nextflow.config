aws {
    accessKey = '**********************'
    secretKey = '***************************************'
    region = '**********'
}


plugins {
  id 'nf-dotenv'
  id 'nf-prov'
  id 'nf-validation@1.1.3'
}


params {
    help = false
    samplesheet = null
    outdir = null

}


process {


      withName: lima_both_end {
      memory = '32.0G'
      cpus = 8
      container = 'seqwell/longplex_demux:latest'
  }     
  
      withName: lima_either_end {
      memory = '32.0G'
      cpus = 8
      container = 'seqwell/longplex_demux:latest'
  }     
  

      withName: LIST_HYBRIDS {
      memory = '12.0G'
      cpus = 6
      container = 'seqwell/longplex_demux:latest'
  }  
  
  
     withName: REMOVE_HYBRIDS {
      memory = '12.0G'
      cpus = 6
      container = 'seqwell/longplex_demux:latest'
  }  

      withName: merge_reads {
      memory = '8.0G'
      cpus = 4
      container = 'seqwell/longplex_demux:latest'
  }   
  
 
      withName: demux_stats {
      memory = '6.0G'
      cpus = 2
      container = 'seqwell/longplex_demux:latest'
  }   
  
      withName: fastqc {
      memory = '8.0G'
      cpus = 4
      container = 'seqwell/longplex_demux:latest'
  }
  
  
      withName: multiqc {
      memory = '8.0G'
      cpus = 4
      container = 'seqwell/longplex_demux:latest'
  }   
      
}



profiles {

  aws {
    docker.enabled = true
      }


  singularity {
    singularity.enabled = true 
      }

  apptainer {
      apptainer.enabled = true 
        }

}



manifest {
    name            = 'pacbio demux'
    description     = 'pacbio demux workflow.'
    mainScript      = 'pacbio_demux_bbduk_test.nf'
    nextflowVersion = '>=24.04.3.5916'
    version         = '0.1.0'


}

